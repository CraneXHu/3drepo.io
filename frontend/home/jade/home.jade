img#homeBackground(src="/public/images/viewer_background.jpg")
#homeLogo
	img(src="/public/images/3drepo-logo-white.png")

div(ng-if="!hm.state.changing")
	div(ng-if="!hm.state.loggedIn")
		div(ng-if="hm.getLoggedOutUrl()" ng-include="hm.getLoggedOutUrl()")
		div(ng-if="!hm.getLoggedOutUrl()")
			login
	div(ng-if="hm.state.loggedIn")
		div(ng-if="hm.getLoggedInUrl()" ng-include="hm.getLoggedInUrl()")
		div(ng-if="!hm.getLoggedInUrl()")
			account-dir(account="hm.state.account", state="hm.state")